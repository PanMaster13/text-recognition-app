<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_white"
    tools:context=".FormActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/timeView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dateView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/time_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/timeView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultView2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/date_hint" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resultView1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/resultView2"
        app:layout_constraintTop_toBottomOf="@id/timeView"
        app:layout_constraintBottom_toTopOf="@id/lotView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/a1c_hint_1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resultView2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/resultView1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateView"
        app:layout_constraintBottom_toTopOf="@id/instIdView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/a1c_hint_2" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lotView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/instIdView"
        app:layout_constraintTop_toBottomOf="@id/resultView1"
        app:layout_constraintBottom_toTopOf="@id/testIdView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/lot_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/instIdView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/lotView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultView2"
        app:layout_constraintBottom_toTopOf="@id/operatorView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/inst_id_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/testIdView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/operatorView"
        app:layout_constraintTop_toBottomOf="@id/lotView"
        app:layout_constraintBottom_toTopOf="@id/submitBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/test_id_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/operatorView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/testIdView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instIdView"
        app:layout_constraintBottom_toTopOf="@id/submitBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/custom_heavy_green"
        android:textColorHint="@color/custom_indigo">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/operator_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_btn_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operatorView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/holo_orange_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>